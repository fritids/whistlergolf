<h1>Listing holes</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Par</th>
    <th>Tournament tees</th>
    <th>Palmer tes</th>
    <th>White tees</th>
    <th>Forward tees</th>
    <th>Handicap mens</th>
    <th>Handicap womens</th>
    <th>Description</th>
  </tr>

<% for hole in @holes %>
  <tr>
    <td><%=h hole.number %></td>
    <td><%=h hole.par %></td>
    <td><%=h hole.tournament_tees %></td>
    <td><%=h hole.palmer_tees %></td>
    <td><%=h hole.white_tees %></td>
    <td><%=h hole.forward_tees %></td>
    <td><%=h hole.handicap_mens %></td>
    <td><%=h hole.handicap_womens %></td>
    <td><%=h hole.description %></td>
    <td><%= link_to 'Show', hole %></td>
    <td><%= link_to 'Edit', edit_hole_path(hole) %></td>
    <td><%= link_to 'Destroy', hole, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

